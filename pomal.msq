CREATE TABLE IF NOT EXISTS series ( sid INTEGER UNSIGNED PRIMARY KEY AUTO_INCREMENT, sname VARCHAR(75) CHARACTER SET utf8mb4 NOT NULL, episodes INT(8) UNSIGNED, lastwatched INT(8) UNSIGNED DEFAULT 0, started DATE, ended DATE, score TINYINT UNSIGNED, content INT(35) UNSIGNED, rating TINYINT UNSIGNED, lastrewatched INT(8) UNSIGNED, seentimes INT UNSIGNED DEFAULT 0, status TINYINT DEFAULT 0, note VARCHAR(1000), stype VARCHAR(30) );
CREATE TABLE IF NOT EXISTS episode ( sid INT(8) UNSIGNED NOT NULL, eid INT(5) UNSIGNED NOT NULL, ename VARCHAR(100) CHARACTER SET utf8mb4, score TINYINT UNSIGNED, content INT(35) UNSIGNED, rating TINYINT UNSIGNED, firstwatch DATE DEFAULT '0000-00-00' );
CREATE TABLE IF NOT EXISTS pub ( pid INTEGER UNSIGNED PRIMARY KEY AUTO_INCREMENT, pname VARCHAR(75) CHARACTER SET utf8mb4 NOT NULL, volumes INT(8) UNSIGNED, chapters INT(8) UNSIGNED, lastreadv INT(8) UNSIGNED DEFAULT 0, lastreadc INT(8) UNSIGNED DEFAULT 0, started DATE, ended DATE, score TINYINT UNSIGNED, content INT(35) UNSIGNED, rating TINYINT UNSIGNED, lastreread INT(5) UNSIGNED, readtimes INT UNSIGNED DEFAULT 0, status TINYINT DEFAULT 0, note VARCHAR(1000) );
CREATE TABLE IF NOT EXISTS volume ( pid INT(8) UNSIGNED NOT NULL, vid INT(5) UNSIGNED NOT NULL, vname VARCHAR(100) CHARACTER SET utf8mb4, score TINYINT UNSIGNED, content INT(35) UNSIGNED, rating TINYINT UNSIGNED, firstread DATE DEFAULT '0000-00-00' );
CREATE TABLE IF NOT EXISTS chapter ( pid INT(8) UNSIGNED NOT NULL, cid INT(5) UNSIGNED NOT NULL, cname VARCHAR(100) CHARACTER SET utf8mb4, score TINYINT UNSIGNED, content INT(35) UNSIGNED, rating TINYINT UNSIGNED, firstread DATE DEFAULT '0000-00-00' );
CREATE TABLE IF NOT EXISTS tag ( tid INTEGER UNSIGNED PRIMARY KEY AUTO_INCREMENT, text VARCHAR(65) CHARACTER SET utf8mb4 );
CREATE TABLE IF NOT EXISTS tags ( xid INT(8) UNSIGNED NOT NULL, tid INT(10) UNSIGNED NOT NULL, titletype CHAR(1) NOT NULL );
CREATE TABLE IF NOT EXISTS extsid ( sid INT(8) UNSIGNED NOT NULL, mal INTEGER UNSIGNED, hum INTEGER UNSIGNED );
CREATE TABLE IF NOT EXISTS extpid ( pid INT(8) UNSIGNED NOT NULL, mal INTEGER UNSIGNED, hum INTEGER UNSIGNED );
