CREATE TABLE series ( sid INT(8) UNSIGNED PRIMARY KEY, sname VARCHAR(75) NOT NULL, episodes INT(8) UNSIGNED, lastwatched INT(5) UNSIGNED DEFAULT 0, started DATE, ended DATE, score TINYINT UNSIGNED, content INT(35) UNSIGNED, rating TINYINT UNSIGNED, lastrewatched INT(5) UNSIGNED, seentimes INT UNSIGNED DEFAULT 0, status TINYINT DEFAULT 0 );
CREATE TABLE episode ( sid INT(8) UNSIGNED NOT NULL, eid INT(5) UNSIGNED NOT NULL, ename VARCHAR(100), score TINYINT UNSIGNED, content INT(35) UNSIGNED, rating TINYINT UNSIGNED, firstwatch DATE );
CREATE TABLE pub ( pid INT(8) UNSIGNED PRIMARY KEY, pname VARCHAR(75) NOT NULL, lastread INT(5) UNSIGNED DEFAULT 0, started DATE, ended DATE, score TINYINT UNSIGNED, content INT(35) UNSIGNED, rating TINYINT UNSIGNED, lastreread INT(5) UNSIGNED, readtimes INT UNSIGNED DEFAULT 0, status TINYINT DEFAULT 0 );
CREATE TABLE volume ( pid INT(8) UNSIGNED NOT NULL, vid INT(5) UNSIGNED NOT NULL, vname VARCHAR(100), score TINYINT UNSIGNED, content INT(35) UNSIGNED, rating TINYINT UNSIGNED, firstread DATE );
CREATE TABLE chapter ( pid INT(8) UNSIGNED NOT NULL, vid INT(5) UNSIGNED NOT NULL, cid INT(5) UNSIGNED NOT NULL, cname VARCHAR(100), score TINYINT UNSIGNED, content INT(35) UNSIGNED, rating TINYINT UNSIGNED, firstread DATE );
CREATE TABLE tag ( tid INTEGER UNSIGNED PRIMARY KEY AUTO_INCREMENT, text VARCHAR(65) );
CREATE TABLE tags ( sid INT(8) UNSIGNED NOT NULL, tid INT(10) UNSIGNED NOT NULL );
